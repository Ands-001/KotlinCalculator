<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="12dp"
    android:textDirection="firstStrongLtr"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/root_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Visor -->
        <LinearLayout
            android:id="@+id/visor_group"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:background="#1E2A25"
            android:orientation="vertical"
            android:padding="16dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/expression_visor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|end"
                android:textColor="#A5D6A7"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="123 + 456" />

            <TextView
                android:id="@+id/result_visor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|end"
                android:textColor="#E8F5E9"
                android:textSize="44sp"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="579" />
        </LinearLayout>

        <!-- Espaço entre visor e teclas -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- Linha: %, CE, C, Exclu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonPercent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="%"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#2C3E50"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/buttonClearEntry"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="clearEntry"
                android:text="CE"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#34495E"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="clear"
                android:text="C"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#34495E"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/buttonBackspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="removeLastCharacter"
                android:text="⌫"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#34495E"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Linha: 1/x, (, ), / -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonReverse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="1/x"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#2C3E50"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/buttonSqrt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="("
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#2C3E50"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/buttonSquared"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text=")"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#2C3E50"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/buttonDivision"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="/"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#455A64"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Linha: 7, 8, 9, * -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="7"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#263238"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="8"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#263238"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="9"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#263238"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="*"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#455A64"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Linha: 4, 5, 6, - -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="4"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#263238"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="5"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#263238"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="6"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#263238"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/buttonSubtract"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="-"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#455A64"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Linha: 1, 2, 3, + -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="1"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#263238"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="2"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#263238"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="3"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#263238"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/buttonAddition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="+"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#455A64"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Linha: +/- , 0, ., = -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSignal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="+/-"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#2C3E50"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="0"
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#263238"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="appendExpression"
                android:text="."
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#263238"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/buttonEquals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:onClick="equalFunction"
                android:text="="
                android:textAllCaps="false"
                android:textColor="#ECEFF1"
                android:backgroundTint="#00695C"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>